<UserControl x:Class="DMOrganizerApp.Views.ContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMOrganizerApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800" MinHeight="60" MinWidth="80" Background="LightGray">
    <Grid>
        <StackPanel>
            <DockPanel  Height="30" VerticalAlignment="Top" Background="Gray">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" FlowDirection="RightToLeft" >
                    <Button Background="DarkRed" MinWidth="60" Content="Delete" />
                </StackPanel>
            </DockPanel>

        </StackPanel>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" Height="50" Content="+" FontSize="40">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="90"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>
